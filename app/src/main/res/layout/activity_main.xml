<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_lrcshow_poster">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#10f8f6fa">


    <RelativeLayout
        android:id="@+id/mymusic_relativeone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#22f8f6fa">
        <ImageView
            android:id="@+id/mymusic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/action_back_normal"
            android:clickable="true"/>
        <TextView
            android:id="@+id/mymusic_titlename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三个傻瓜"
            android:textColor="@color/gray2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/mymusic_player"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bg_button_player_singer_p"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"/>
    </RelativeLayout>
   <RelativeLayout
       android:id="@+id/mymusic_relativefive"
       android:layout_below="@id/mymusic_relativeone"
       android:layout_above="@id/mymusic_relativetwo"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#22f8f6fa">
         <android.support.v4.view.ViewPager
             android:id="@+id/mymusic_imageview"
             android:layout_marginTop="1dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
         </android.support.v4.view.ViewPager>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="10dp"
           android:layout_alignParentBottom="true">
           <ImageView
               android:id="@+id/mymusic_pageone"
               android:layout_centerHorizontal="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/page"/>
           <ImageView
               android:id="@+id/mymusic_pagetwo"
               android:layout_toRightOf="@id/mymusic_pageone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/page_now"/>
       </RelativeLayout>

  </RelativeLayout>

    <RelativeLayout
        android:id="@id/mymusic_relativetwo"
        android:layout_above="@id/mymusic_relativethree"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#22f8f6fa">
        <TextView
            android:id="@+id/mymusic_ritist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周杰伦"
            android:textColor="@color/gray2"
            android:padding="10dp"/>
        <TextView

            android:id="@+id/mymusic_anblum"
            android:layout_below="@id/mymusic_ritist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专辑：2007世界巡回演唱会"
            android:textColor="@color/gray2"
            android:paddingLeft="10dp"/>
        <ImageView
            android:id="@+id/mymusic_favorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bg_button_player_collect_p"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/mymusic_dowload"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_player_download_n"
            android:layout_toLeftOf="@id/mymusic_favorite"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/mymusic_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bg_button_player_share_f"
            android:layout_toLeftOf="@id/mymusic_dowload"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:clickable="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/mymusic_relativethree"
        android:layout_above="@id/mymusic_relativefour"
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#22f8f6fa">
        <TextView
            android:id="@+id/mymusic_currenttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <SeekBar
            android:id="@+id/mymusic_seekbar"
            android:layout_toRightOf="@id/mymusic_currenttime"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/mymusic_totaltime"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/mymusic_relativefour"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#22f8f6fa">
        <ImageView
            android:id="@+id/mymusic_modole"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/bg_button_player_mode_cycle_nor"
            android:layout_centerVertical="true"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/mymusic_last"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/bg_button_player_prev_p"
            android:layout_toLeftOf="@+id/mymusic_playandpause"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/mymusic_playandpause"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/bg_button_player_play_p"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/mymusic_next"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/bg_button_player_next_p"
            android:layout_toRightOf="@id/mymusic_playandpause"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/mymusic_more"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/icon_player_more_p"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"/>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
